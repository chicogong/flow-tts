# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 88

# Go
[*.go]
indent_style = tab
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx,mjs,cjs}]
indent_size = 2

# JSON/YAML
[*.{json,yml,yaml}]
indent_size = 2

# Java
[*.java]
indent_size = 4

# XML/POM
[*.{xml,pom}]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
