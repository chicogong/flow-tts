{
  "name": "flow-tts",
  "version": "0.1.3",
  "description": "OpenAI-style TTS SDK for Tencent Cloud - Zero dependencies, TypeScript-first",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/data",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "tts",
    "text-to-speech",
    "tencent-cloud",
    "audio",
    "synthesis",
    "openai",
    "flow",
    "typescript"
  ],
  "author": "Flow TTS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chicogong/flow-tts.git",
    "directory": "packages/node"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
